{
  "name": "Flutter & Android Development Container",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    // Feature existente para o Flutter
    "ghcr.io/devcontainers/features/flutter:2": {},
    // NOVA FEATURE AQUI para o Android SDK e ferramentas de linha de comando
    "ghcr.io/devcontainers/features/android-sdk:2": {
      "installBuildTools": true,
      "installPlatformTools": true
    }
  },
  // O comando agora também aceita as licenças do Android
  "postCreateCommand": "sudo chown -R vscode /workspaces && yes | /usr/local/sdk/cmdline-tools/latest/bin/sdkmanager --licenses && flutter doctor",
  "customizations": {
    "vscode": {
      "extensions": [
        "Dart-Code.flutter",
        "Dart-Code.dart-code"
      ]
    }
  },
  // Mapeia a variável de ambiente ANDROID_HOME para o Flutter encontrar o SDK
  "remoteEnv": {
    "ANDROID_HOME": "/usr/local/sdk"
  }
}