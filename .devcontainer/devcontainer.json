{
  "name": "Flutter Development Container",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/flutter:2": {}
  },
  "postCreateCommand": "flutter doctor",
  "forwardPorts": [9100],
  "portsAttributes": {
    "9100": {
      "label": "Flutter DevTools"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "Dart-Code.flutter",
        "Dart-Code.dart-code"
      ]
    }
  }
}